{% extends 'base.html.twig' %}

{% block title %}Modifier le participant - {{ event.title }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Modifier le participant
                    </h4>
                    <p class="text-muted mb-0">{{ event.title }}</p>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.firstName, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'required': true}}) }}
                            {{ form_errors(form.firstName) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.lastName, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'required': true}}) }}
                            {{ form_errors(form.lastName) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.email, 'Adresse e-mail', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (form_errors(form.email) ? ' is-invalid' : (form.email.vars.value and not form_errors(form.email) ? ' is-valid' : '')), 'required': true}}) }}
                            {% if form_errors(form.email) %}
    <div class="invalid-feedback d-block">Adresse e-mail invalide</div>
{% endif %}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.phone, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control' ~ (form_errors(form.phone) ? ' is-invalid' : (form.phone.vars.value and not form_errors(form.phone) ? ' is-valid' : ''))}}) }}
                            {% if form_errors(form.phone) %}
    <div class="invalid-feedback d-block">Numéro de téléphone invalide</div>
{% endif %}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.company, 'Société', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.company, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.company) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.position, 'Fonction', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.position, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.position) }}
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_participants_index', {eventId: event.id}) }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Enregistrer les modifications
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Form validation
(function() {
    'use strict';
    window.addEventListener('load', function() {
        var forms = document.getElementsByClassName('needs-validation');
        var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('submit', function(event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    }, false);
})();
</script>
{% endblock %}