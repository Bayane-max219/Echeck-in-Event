{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - Tableau de bord{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-speedometer2 me-2"></i>Tableau de bord
                </h1>
                <a href="{{ path('app_events_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Nouvel événement
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total événements
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.totalEvents }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-calendar-event fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Événements actifs
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.activeEvents }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-play-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total participants
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.totalParticipants }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-people fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Présences
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.totalCheckIns }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Événements récents -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Événements récents</h6>
                    <a href="{{ path('app_events_index') }}" class="btn btn-sm btn-outline-primary">
                        Voir tous les événements
                    </a>
                </div>
                <div class="card-body">
                    {% if events is empty %}
                        <div class="text-center py-4">
                            <i class="bi bi-calendar-x display-4 text-muted mb-3"></i>
                            <p class="text-muted">Aucun événement à venir.</p>
                            <a href="{{ path('app_events_new') }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Créer le premier événement
                            </a>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Événements</th>
                                        <th>Date</th>
                                        <th>Lieu</th>
                                        <th>Participants</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for event in events %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                                                        <i class="bi bi-calendar-event text-white"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">{{ event.title }}</h6>
                                                        {% if event.description %}
                                                            <small class="text-muted">{{ event.description|slice(0, 50) }}...</small>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>{{ event.startDate|date('d F Y', 'Europe/Paris')|replace({'January':'janvier','February':'février','March':'mars','April':'avril','May':'mai','June':'juin','July':'juillet','August':'août','September':'septembre','October':'octobre','November':'novembre','December':'décembre'}) }}</div>
                                                <small class="text-muted">{{ event.startDate|date('d F Y', 'Europe/Paris')|replace({'January':'janvier','February':'février','March':'mars','April':'avril','May':'mai','June':'juin','July':'juillet','August':'août','September':'septembre','October':'octobre','November':'novembre','December':'décembre'}) }}</small>
                                            </td>
                                            <td>{{ event.location }}</td>
                                            <td>
                                                <span class="badge bg-info">{{ event.participantCount }} Participants</span>
                                                {% if event.checkedInCount > 0 %}
                                                    <br><small class="text-success">{{ event.checkedInCount }} présents</small>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% set statusClass = event.status == 'active' ? 'success' : (event.status == 'draft' ? 'warning' : (event.status == 'cancelled' ? 'danger' : (event.status == 'completed' ? 'secondary' : 'secondary'))) %}
<span class="badge bg-{{ statusClass }} fs-6 status-badge-uniform">{{ event.status == 'active' ? 'Actif' : (event.status == 'draft' ? 'Brouillon' : (event.status == 'cancelled' ? 'Annulé' : (event.status == 'completed' ? 'Terminé' : event.status))) }}</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('app_events_show', {id: event.id}) }}" 
                                                       class="btn btn-sm btn-outline-primary" title="Voir">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_events_edit', {id: event.id}) }}" 
                                                       class="btn btn-sm btn-outline-secondary" title="Éditer">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a href="{{ path('app_participants_index', {eventId: event.id}) }}" 
                                                       class="btn btn-sm btn-outline-info" title="Participants">
                                                        <i class="bi bi-people"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
}
.border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
}
.border-left-info {
    border-left: 0.25rem solid #36b9cc !important;
}
.border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
}
.avatar-sm {
    width: 2.5rem;
    height: 2.5rem;
}
.card {
    transition: all 0.3s ease;
}
.card:hover {
    transform: translateY(-2px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
}
.status-badge-uniform {
    width: 100px;
    height: 28px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    padding: 0 12px;
    border-radius: 18px;
    font-weight: 600;
    letter-spacing: 0.5px;
}
</style>
{% endblock %}