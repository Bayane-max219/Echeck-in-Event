{% extends 'base.html.twig' %}

{% block body %}
<div class="min-vh-100 d-flex align-items-center bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <h1 class="h4 text-gray-900 mb-4 text-center">Réinitialiser votre mot de passe</h1>
                        <div class="mb-4 text-muted text-center">
                            Entrez votre adresse e-mail pour recevoir un lien de réinitialisation.
                        </div>
                        {# Display flash messages #}
                        {% for label, messages in app.flashes() %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label == 'success' ? 'success' : (label == 'danger' ? 'danger' : label) }}" role="alert">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                        {{ form_start(requestForm) }}
                            <label for="{{ requestForm.email.vars.id }}" class="form-label">Adresse e-mail</label>
                            {{ form_widget(requestForm.email, {'attr': {'class': 'form-control mb-3'}, 'value': ''}) }}
                            {{ form_errors(requestForm.email) }}
                            <button type="submit" class="btn btn-primary w-100 mb-3">Envoyer le lien de réinitialisation</button>
                        {{ form_end(requestForm) }}
                        <div class="text-center mt-3">
                            <a href="{{ path('app_login') }}" class="btn w-100" style="font-weight:500;background:linear-gradient(90deg,#ffb347 0%,#ff7b54 100%);color:#fff;border:none;box-shadow:0 2px 8px #ffb34744;transition:background 0.2s;" onmouseover="this.style.background='linear-gradient(90deg,#ff7b54 0%,#ffb347 100%)'" onmouseout="this.style.background='linear-gradient(90deg,#ffb347 0%,#ff7b54 100%)'">
                                Retour à la connexion
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 