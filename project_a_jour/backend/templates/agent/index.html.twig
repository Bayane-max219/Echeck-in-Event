{% extends 'base.html.twig' %}

{% block title %}Liste des agents - Ajouter un agent{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-person-badge me-2"></i>Liste des agents
                </h1>
                <a href="{{ path('app_agents_new') }}" class="btn btn-primary">
    <i class="bi bi-plus-circle me-2"></i>Ajouter un agent
</a>
            </div>
        </div>
    </div>

    {% if agents is empty %}
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-person-x display-1 text-muted mb-4"></i>
                        <h4 class="text-muted">Aucun agent trouvé</h4>
                        <p class="text-muted mb-4">Commencez par créer votre premier agent pour gérer les événements.</p>
                        <a href="{{ path('app_agents_new') }}" class="btn btn-primary btn-lg">
    <i class="bi bi-plus-circle me-2"></i>Créer le premier agent
</a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Liste des agents</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Nom</th>
                                        <th>Adresse e-mail</th>
                                        <th>Rôles</th>
                                        <th>Statut</th>
                                        <th>Date de création</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for agent in agents %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                                                        <i class="bi bi-person text-white"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">{{ agent.nom }}</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>{{ agent.email }}</td>
                                            <td>
                                                {% set filteredRoles = agent.roles|filter(r => r != 'ROLE_USER') %}
{% set displayRoles = filteredRoles is not empty ? filteredRoles : agent.roles %}
{% for role in displayRoles %}
    {% set roleClass = role == 'ROLE_ADMIN' ? 'danger' : (role == 'ROLE_USER' ? 'warning' : 'info') %}
    <span class="badge bg-{{ roleClass }} me-1">
        {% if role == 'ROLE_ADMIN' %}
            Administrateur
        {% elseif role == 'ROLE_USER' %}
            Utilisateur
        {% elseif role == 'ROLE_AGENT' %}
            Agent
        {% else %}
            {{ role }}
        {% endif %}
    </span>
{% endfor %}
                                            </td>
                                            <td>
                                                {% if agent.isConfirmed %}
    <span class="badge bg-success">Confirmé</span>
{% else %}
    <span class="badge bg-warning text-dark">Non confirmé</span>
{% endif %}
                                            </td>
                                            <td>{{ agent.createdAt|date('d/m/Y H:i') }}</td>
                                            <td class="text-end">
                                                <div class="btn-group" role="group">
    <a href="{{ path('app_agents_show', {id: agent.id}) }}" class="btn btn-outline-primary btn-sm">
        <i class="bi bi-eye"></i>
    </a>
    <a href="{{ path('app_agents_edit', {id: agent.id}) }}" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-pencil"></i>
    </a>
    <a href="{{ path('app_agents_resend_confirmation', {id: agent.id}) }}" class="btn btn-outline-warning btn-sm" title="{{ 'common.resend_confirmation_email'|trans }}">
        <i class="bi bi-envelope-arrow-up"></i>
    </a>
    <form method="post" action="{{ path('app_agents_delete', {id: agent.id}) }}" style="display: inline-block;" onsubmit="return confirm('{{ 'Êtes-vous sûr de vouloir supprimer cet agent ?'|trans }}');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ agent.id) }}">
        <button class="btn btn-outline-danger btn-sm" type="submit">
            <i class="bi bi-trash"></i>
        </button>
    </form>
</div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>

<style>
.avatar-sm {
    width: 40px;
    height: 40px;
}
</style>
{% endblock %}
