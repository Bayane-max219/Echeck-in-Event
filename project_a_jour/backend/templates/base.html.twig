<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Echeck-in Event{% endblock %}</title>
    
    <!-- Apply saved theme ASAP to minimize FOUC -->
    <script>
        (function() {
            try {
                var saved = localStorage.getItem('theme');
                var theme = saved ? saved : 'light'; // default to light if no preference stored
                document.documentElement.setAttribute('data-bs-theme', theme);
            } catch (e) { /* no-op */ }
        })();
    </script>
    
    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Custom CSS (cache-busted) -->
    <link rel="stylesheet" href="{{ asset('css/app.css') }}?v=theme-1">
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}?v=theme-1">
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    {# Bloc universel d'affichage des messages flash #}
    {% for label, messages in app.flashes() %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'success' ? 'success' : (label == 'danger' ? 'danger' : label) }} alert-dismissible fade show mt-2 mx-auto w-50 text-center" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% if app.user %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand fw-bold" href="{{ path('app_dashboard') }}">
                    <i class="bi bi-qr-code-scan me-2"></i>Echeck-in Event
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_dashboard') }}">
                                <i class="bi bi-house me-1"></i>Tableau de bord
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_events') }}">
                                <i class="bi bi-calendar-event me-1"></i>Événements
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_agents_index') }}">
                                <i class="bi bi-person-badge me-1"></i>Agents
                            </a>
                        </li>
                    </ul>
                    
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item me-2">
                            <button id="themeToggle" class="btn btn-outline-light btn-sm" type="button" title="Changer le thème" onclick="toggleTheme()">
                                <i id="themeToggleIcon" class="bi bi-moon"></i>
                            </button>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>{{ app.user.fullName }}
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="{{ path('app_profile') }}">
                                    <i class="bi bi-person me-2"></i>Profil
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="{{ path('app_logout') }}">
                                    <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
                                </a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    {% else %}
        {# Global theme toggle visible even when not authenticated #}
        <button id="themeToggle" class="btn btn-secondary theme-toggle-fixed" type="button" title="{{ 'app.toggle_theme'|trans }}" onclick="toggleTheme()">
            <i id="themeToggleIcon" class="bi bi-moon"></i>
        </button>
            {% endif %}

    <main class="{% if app.user %}container-fluid py-4{% endif %}">
        {% block body %}{% endblock %}
    </main>

    <!-- Bootstrap 5.3 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS (cache-busted) -->
    <script src="{{ asset('js/app.js') }}?v=theme-1"></script>
    
    {% block javascripts %}{% endblock %}
</body>
</html>